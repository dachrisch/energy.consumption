{
  "name": "energy.consumption",
  "version": "2.5.0",
  "private": true,
  "scripts": {
    "dev": "concurrently --names \"DB,NEXT\" --prefix-colors \"cyan,green\" \"npm run db:memory\" \"npm run dev:next\"",
    "dev:next": "next dev --turbopack --port 3100",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "lint:strict": "eslint . --config .eslintrc.quality.json --max-warnings 0",
    "test": "cross-env LANG=en_GB.UTF-8 TZ=Europe/Berlin jest",
    "test:coverage": "cross-env LANG=en_GB.UTF-8 TZ=Europe/Berlin jest --config jest.coverage.config.ts",
    "test:watch": "cross-env LANG=en_GB.UTF-8 TZ=Europe/Berlin jest --watch",
    "type-check": "tsc --noEmit",
    "quality:check": "npm run lint:strict && npm run type-check && npm run test:coverage",
    "release": "standard-version && git push --follow-tags origin main",
    "release:patch": "standard-version --release-as patch && git push --follow-tags origin main",
    "release:minor": "standard-version --release-as minor && git push --follow-tags origin main",
    "release:major": "standard-version --release-as major && git push --follow-tags origin main",
    "db:memory": "node scripts/startMemoryMongo.js",
    "db:dump": "bash scripts/dump-collections.sh",
    "db:dump:all": "bash scripts/dump-collections.sh --all",
    "db:dump:source": "bash scripts/dump-collections.sh sourceenergyreadings",
    "db:dump:display": "bash scripts/dump-collections.sh displayenergydata",
    "db:dump:old": "bash scripts/dump-collections.sh energies",
    "flags:enable-all": "node scripts/enable-new-backend.js --all",
    "flags:enable-forms": "node scripts/enable-new-backend.js --forms",
    "flags:enable-csv": "node scripts/enable-new-backend.js --csv",
    "flags:disable-all": "node scripts/enable-new-backend.js --disable-all",
    "flags:status": "node scripts/enable-new-backend.js --status"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^7.1.0",
    "bcryptjs": "^3.0.3",
    "chart.js": "^4.5.1",
    "csv-parser": "^3.2.0",
    "date-fns": "^4.1.0",
    "immutable": "^5.1.4",
    "moment": "^2.30.1",
    "moment-timezone": "^0.6.0",
    "mongoose": "^8.20.0",
    "next": "16.0.3",
    "next-auth": "^4.24.13",
    "react": "^19.2.0",
    "react-chartjs-2": "^5.3.1",
    "react-datepicker": "^8.9.0",
    "react-dom": "^19.2.0"
  },
  "overrides": {
    "next-auth": {
      "next": "16.0.3"
    }
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "eslint": "^9",
    "eslint-config-next": "16.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "jest-junit": "^16.0.0",
    "mongodb-memory-server": "^10.3.0",
    "standard-version": "^9.5.0",
    "tailwindcss": "^4",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
